#!/bin/bash
# convert .MO compressed file back into directory tree
#
# Author: Tomas M. <http://www.linux-live.org>
#

if [ ! -d "$2" ]; then
   echo 
   echo "Convert .MO compressed module back into directory tree"
   echo "usage: $0 source_file.mo existing_output_directory"
   exit 1
fi

PATH=.:$(dirname $0):/usr/lib:$PATH
. liblinuxlive || exit 1

# we need modified unsquashfs which supports -f
# I made the modifications and sent patch to squashfs author already

unsquashfs -f -dest "$2" "$1" >/dev/null
